@{
    ViewData["Title"] = "MCU/MCU Awal/Upload MCU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model HMTF.Models.FirstMCU;

<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <!-- Menu -->
        @await Html.PartialAsync("_Sidebar")
        <!-- / Menu -->
        <!-- Layout container -->
        <div class="layout-page">
            <!-- Navbar -->
            @await Html.PartialAsync("_Navbar")

            <!-- / Navbar -->
            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->
                <div class="container-xxl flex-grow-1 container-p-y">
                    <div class="row">
                        <div class="my-3">
                            <div class="d-flex align-items-center">
                                <a href="javascript:history.go(-1);"><i class='bx bx-chevron-left bx-md text-secondary'></i></a>
                                <h4 class="m-0 display-7"><span class="fw-lighter">MCU Awal</span> / Upload MCU Awal</h4>
                            </div>
                        </div>
                        <div class="col-lg-12 my-4 order-0">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <form method="POST">
                                                <div class="mb-3">
                                                    <label class="form-label" for="basic-default-company">NIK</label>
                                                    <input type="text" class="form-control" id="nik" asp-for="NIK" placeholder="NIK">
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label" for="basic-default-company">NAME</label>
                                                    <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Name">
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label" for="basic-default-company">DEPARTMENT</label>
                                                    <input type="text" class="form-control" id="department" asp-for="Department" placeholder="Department">
                                                </div>
                                                @* <div class="mb-3">
                                                <div class="form-text">You can use letters, numbers &amp; periods</div>
                                                </div> *@ @* Jika tidak perlu hapus *@
                                                <div class="mb-3">
                                                    <label for="formFile" class="form-label">Upload File</label>
                                                    <input class="form-control" type="file" asp-for="FilePath" id="formFile">
                                                </div>
                                                <div class="d-flex justify-content-start">
                                                    <a class="btn btn-secondary mx-1" href="javascript:history.go(-1);">Cancel</a>
                                                    <button type="submit" class="btn btn-primary">Upload</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
