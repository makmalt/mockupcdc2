@{
}
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model HMTF.Models.User;

<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <!-- Menu -->
        @await Html.PartialAsync("_Sidebar")
        <!-- / Menu -->
        <!-- Layout container -->
        <div class="layout-page">
            <!-- Navbar -->
            @await Html.PartialAsync("_Navbar")

            <!-- / Navbar -->
            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->
                <div class="container-xxl flex-grow-1 container-p-y">
                    <div class="row">
                        <div class="mt-3">
                            <h5>Edit Data User</h5>
                        </div>
                        <div class="col-lg-6 mb-4 order-0">
                            <div class="card">
                                <div class="d-flex align-items-end row">
                                    <div class="col-sm-12">
                                        <div class="card-body">

                                            <form method="POST">
                                                <div class="mb-3">
                                                    <label for="name" class="form-label">Name</label>
                                                    <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Enter your username" autofocus="">
                                                </div> 
                                                @* <div class="mb-3">
                                                    <label for="name" class="form-label">Email</label>
                                                    <input type="text" class="form-control" id="email" asp-for="Email" placeholder="Enter your username" autofocus="">
                                                </div> *@
                                                <div class="mb-3">
                                                    <label for="email" class="form-label">Department</label>
                                                    <input type="text" class="form-control" id="department" asp-for="Departement" placeholder="Enter your email">

                                                    <div class="mb-3 form-password-toggle">
                                                        <label class="form-label" asp-for="CreatedBy" for="createdBy">CreatedBy</label>
                                                        <div class="input-group input-group-merge">
                                                            <input type="text" id="createdBy" class="form-control" asp-for="CreatedBy" placeholder="············" aria-describedby="password">
                                                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                                        </div>
                                                    </div>

                                                    <button class="btn btn-primary d-grid w-100">Save</button>
                                            </form>

                                            <!-- / Content -->
                                            <div class="content-backdrop fade"></div>
                                        </div>
                                        <!-- Content wrapper -->
                                    </div>
                                    <!-- / Layout page -->
                                </div>


                                <div class="buy-now">
                                    <a href="https://themeselection.com/products/sneat-bootstrap-html-admin-template/"
                                       target="_blank"
                                       class="btn btn-danger btn-buy-now">Upgrade to Pro</a>
                                    <!-- Overlay -->
                                    <div class="layout-overlay layout-menu-toggle"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
